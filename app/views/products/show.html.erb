<h2 class="page-heading"><span><%= @product.title %></span></h2>




<!-- project content -->
<div id="product-content" class="clearfix">



  <!-- slider -->
  <div class="flexslider">
    <ul class="slides">

      <% @product.images.each do |image| %>

          <li>
            <%= image_tag image.image_url %>
          </li>

      <% end %>

    </ul>
  </div>
  <!-- ENDS slider -->



  <!-- product description -->
  <div class="product-description">

    <h3>Description</h3>
    <%= @product.description.html_safe %>

    <h3>Technical Info</h3>
    <%= @product.tech_info.html_safe %>

  </div>
  <!-- ENDS product desc -->

  <!-- product-infos -->
  <aside class="product-info">

    <% unless @product_designers.blank? %>
        <h5>Designer</h5>
        <ul>

          <% @product_designers.each do |designer| %>
              <li><%= link_to designer.title, designer_path(designer) %></li>
          <% end %>

        </ul>

    <% end %>

    <% unless @product_services.blank? %>

        <h5>Services</h5>
        <ul>

          <% @product_services.each do |service| %>
              <li><%= link_to service.title, service_path(service) %></li>
          <% end %>

        </ul>

    <% end %>

    <% unless @product_partners.blank? %>

        <h5>In collaboration with</h5>
        <ul>

          <% @product_partners.each do |partner| %>
              <li><%= link_to partner.title, partner_path(partner) %></li>
          <% end %>

        </ul>

    <% end %>

    <h5>Find this product at</h5>
    <p><%= link_to 'our stores', retailers_product_path(params[:id]) %><p>

  </aside>
  <!-- END infos -->

  <div class="clearfix"></div>

  <% if @gt %>
    <%= render 'gt', :prev_prod => @prev_prod, :next_prod => @next_prod, :type => params[:gt], :index => @index %>
  <% end %>

</div>
<!--  ENDS product content-->