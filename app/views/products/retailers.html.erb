<h2 class="page-heading"><span>Retailers for this product</span></h2>

<div class="clearfix"></div>
<ul class="retailers">

  <% @retailers.each do |retailer| %>
      <li>
        <h3><%= link_to retailer.title %></h3>
        <ul>
          <li><span>Address:</span> <%= retailer.address %></li>
          <li><span>City:</span> <%= retailer.city %></li>
          <li><span>Tel.:</span> <%= retailer.telephone %></li>
          <li><span>Email:</span> <%= retailer.email %></li>
        </ul>
      </li>
  <% end %>

</ul>
<%= link_to "&#8592; return to product".html_safe, product_path(params[:id]), :class => 'more_link' %>